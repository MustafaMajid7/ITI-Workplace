@model Instructor

<form action="/instructor/confirmEditing/@Model?.id" method="post">
	<div>
		<label>Name</label>
		<input type="text" name="name" id="name" value="@Model?.name" class="form-control" />
	</div>
	<div>
		<label>Salary</label>
		<input type="number" name="salary" id="salary" value="@Model?.salary" class="form-control" />
	</div>
	<div>
		<label>Address</label>
		<input type="address" name="address" id="address" value="@Model?.address" class="form-control" />

	</div>
	<div>
		<label>Image</label>
		<input disabled type="image" src="/src/@Model?.img" width="100px" height="100px" />
		<input type="text" name="img" id="img" value="@Model?.img" class="form-control" hidden />
	</div>
	<div>
		<label>Departments</label>
		<select class="form-control" name="dept_id">
			@foreach (var item in (List<Department>)ViewBag.departments)
			{
				if (Model.dept_id == item.id)
				{
					<option value="@item.id" selected>@item.name</option>
				}
				else
				{
					<option value="@item.id">@item.name</option>
				}
			}
		</select>
	</div>
	<div>
		<label>Courses</label>
		<select class="form-control" name="crs_id">
			@foreach (var item in (List<Course>)ViewBag.courses)
			{
				if (Model.crs_id == item.id)
				{
					<option value="@item.id" selected>@item.name</option>
				}
				else
				{
					<option value="@item.id">@item.name</option>
				}
			}
		</select>
	</div>
	<input type="submit" value="Confirm" class="btn btn-primary d-block w-100" style="margin:10px auto" />
</form>

<a href="/" class="btn btn-warning d-block m-auto"> Go Back</a>

